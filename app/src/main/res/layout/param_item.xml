<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/def_margin"
        android:layout_marginTop="@dimen/def_margin_half"
        android:layout_marginRight="@dimen/def_margin"
        android:layout_marginBottom="@dimen/def_margin_half"
        app:cardCornerRadius="@dimen/radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/def_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ed_angka1_p"
                style="@style/MyTextInputLayoutOutlinedBox"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:hint="Angka1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ed_angka1"
                    android:enabled="false"
                    style="@style/MyTextInputEditText"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/MyTextContent"
                android:layout_margin="8dp"
                android:text="+" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ed_angka2_p"
                style="@style/MyTextInputLayoutOutlinedBox"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:hint="Angka2">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ed_angka2"
                    style="@style/MyTextInputEditText"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/MyTextContent"
                android:layout_margin="8dp"
                android:text="=" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ed_hasil_p"
                style="@style/MyTextInputLayoutOutlinedBox"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:hint="Hasil">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ed_hasil"
                    android:enabled="false"
                    style="@style/MyTextInputEditText"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_debug"
        android:textSize="11dp"
        style="@style/MyTextContent"
        android:text="MyTextContent" />
</LinearLayout>